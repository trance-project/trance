# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
GET        /docs/swagger-ui/*file        controllers.Assets.at(path:String="/lib/swagger-ui", file:String)

# Trance objects
GET       /tranceObject                     v1.controllers.TranceObjectController.getAll
GET       /tranceObject/:id                 v1.controllers.TranceObjectController.getTranceObject(id: java.util.UUID)
POST      /tranceObject                     v1.controllers.TranceObjectController.createTranceObject
PATCH     /tranceObject/:id                 v1.controllers.TranceObjectController.updateTranceObject(id: java.util.UUID)
DELETE    /tranceObject/:id                 v1.controllers.TranceObjectController.delete(id: java.util.UUID)

# NRC objects
GET       /nrccode                     v1.controllers.QueryController.getAll
GET       /nrccode/:id                 v1.controllers.QueryController.getQuery(id: java.util.UUID)
POST      /nrccode                     v1.controllers.QueryController.createQuery
POST      /nrccode/standard            v1.controllers.QueryController.standardQuery
POST      /nrccode/shred               v1.controllers.QueryController.shredQuery
POST	  /nrccode/run				   v1.controllers.QueryController.executeQuery
PATCH     /nrccode/:id                 v1.controllers.QueryController.updateUpdateQuery(id: java.util.UUID)
DELETE    /nrccode/:id                 v1.controllers.QueryController.delete(id: java.util.UUID)

# Blockly objects
